server {
    listen 80;
    listen [::]:80;
    server_name auth.chi.lab.amd-e.com;

    # ACME Challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Redirect all HTTP to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

upstream authentik_server {
    # Use keepalive for performance
    server 127.0.0.1:9000;
    keepalive 32;
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      "";
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name auth.chi.lab.amd-e.com;

    # SSL Certs (Managed by acme.sh)
    # Ensure these paths match where acme.sh installs them
    ssl_certificate /etc/nginx/ssl/fullchain.cer;
    ssl_certificate_key /etc/nginx/ssl/auth.key;

    # Proxy to Authentik
    location / {
        proxy_pass http://authentik_server;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        proxy_http_version 1.1;
    }
}
