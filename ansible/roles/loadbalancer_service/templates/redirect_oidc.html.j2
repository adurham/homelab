<!DOCTYPE html>
<html>
<head>
    <title>Redirecting to Login...</title>
    <style>
        body { font-family: sans-serif; display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f5f5f5; color: #333; }
        .container { text-align: center; }
        .spinner { border: 4px solid #f3f3f3; border-top: 4px solid #E47228; border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; margin: 0 auto 20px; }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    </style>
    <script>
        async function doLogin() {
            const realm = 'lab.amd-e.com';
            const redirectUrl = window.location.origin;
            const statusEl = document.getElementById('status');

            try {
                statusEl.innerText = "Initiating authentication...";
                // Call Proxmox API to get the OpenID Auth URL
                // Note: We are on the same domain, so this fetch goes to the LB, which proxies to Proxmox
                const response = await fetch('/api2/extjs/access/openid/auth-url', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `realm=${realm}&redirect-url=${encodeURIComponent(redirectUrl)}`
                });

                const data = await response.json();
                if (data.success === 0) {
                    throw new Error(data.message || "Unknown API error");
                }

                if (data.data) {
                    statusEl.innerText = "Redirecting...";
                    window.location.href = data.data;
                } else {
                    throw new Error("Invalid response received");
                }
            } catch (e) {
                statusEl.innerText = "Login failed";
                document.getElementById('error').innerText = e.toString();
                // Fallback to manual login
                setTimeout(() => window.location.href = "/", 3000);
            }
        }
        window.onload = doLogin;
    </script>
</head>
<body>
    <div class="container">
        <div class="spinner"></div>
        <h3 id="status">Connecting to SSO...</h3>
        <pre id="error" style="color: red;"></pre>
    </div>
</body>
</html>
