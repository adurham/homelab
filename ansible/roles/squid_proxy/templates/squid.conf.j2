# Squid Configuration (Simplified/Permissive)

# ACLs
acl localnet src 172.16.0.0/12  # Private Networks
acl localnet src 192.168.0.0/16 # LAN Networks
acl localnet src 10.0.0.0/8     # VPN/Other
acl SSL_ports port 443
acl Safe_ports port 80		# http
acl Safe_ports port 21		# ftp
acl Safe_ports port 443		# https
acl Safe_ports port 70		# gopher
acl Safe_ports port 210		# wais
acl Safe_ports port 1025-65535	# unregistered ports
acl Safe_ports port 280		# http-mgmt
acl Safe_ports port 488		# gss-http
acl Safe_ports port 591		# filemaker
acl Safe_ports port 777		# multiling http
acl CONNECT method CONNECT

# Access Control
# Allow everything (Security handled by Proxmox Firewall)
http_access allow all

# Proxy Port with SSL Bump
http_port 0.0.0.0:3129 ssl-bump \
  cert=/etc/squid/ssl/squid-ca.pem \
  key=/etc/squid/ssl/squid-ca.key \
  generate-host-certificates=on \
  dynamic_cert_mem_cache_size=4MB

# Passthrough Port (No SSL Bump)
http_port 0.0.0.0:3130

# SSL Bump Configuration
sslcrtd_program /usr/lib/squid/security_file_certgen -s /var/spool/squid/ssl_db -M 4MB

acl step1 at_step SslBump1
ssl_bump peek step1
ssl_bump bump all

# Cache directory (default)
coredump_dir /var/spool/squid

# Refresh patterns
refresh_pattern ^ftp:		1440	20%	10080
refresh_pattern ^gopher:	1440	0%	1440
refresh_pattern -i (/cgi-bin/|\?) 0	0%	0
refresh_pattern .		0	20%	4320

# DNS Servers (Use internal DNS)
dns_nameservers 172.16.0.10
